{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Sample Adaptive Card",
      "weight": "Bolder",
      "size": "Large",
      "color": "Accent"
    },
    {
      "type": "TextBlock",
      "text": "This is a sample card loaded from a JSON file in the SPFx solution.",
      "wrap": true,
      "spacing": "Medium"
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Status:",
          "value": "Active"
        },
        {
          "title": "Priority:",
          "value": "High"
        },
        {
          "title": "Date:",
          "value": "July 30, 2025"
        }
      ]
    },
    {
      "type": "Image",
      "url": "https://adaptivecards.io/content/cats/1.png",
      "size": "Medium",
      "horizontalAlignment": "Center"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Learn More",
      "url": "https://adaptivecards.io"
    },
    {
      "type": "Action.Submit",
      "title": "Submit Feedback",
      "data": {
        "action": "feedback",
        "cardType": "sample"
      }
    }
  ]
}
