{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Project Status Update",
      "weight": "Bolder",
      "size": "Large",
      "color": "Good"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://adaptivecards.io/content/cats/2.png",
              "size": "Small",
              "style": "Person"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Project Alpha",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "Updated by John Doe",
              "size": "Small",
              "color": "Accent"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "Progress: 75% Complete",
          "weight": "Bolder"
        },
        {
          "type": "TextBlock",
          "text": "Next milestone: Q4 Release",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "View Details",
      "data": {
        "action": "viewDetails",
        "projectId": "alpha-001"
      }
    }
  ]
}
